{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/**/*",
        "app/javascript/**/*"
      ]
    },
  },
  "includes": [
    "./app/javascript/packs/MainApp/**/*"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public",
    "**/*.test.tsx",
  ],
  "compileOnSave": true
}
