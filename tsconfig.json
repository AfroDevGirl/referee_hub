{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "rootDir": "./app/javascript/packs/MainApp"
  },
  "exclude": [
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
